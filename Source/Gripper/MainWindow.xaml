<Window x:Class="Gripper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gripper"
        mc:Ignorable="d"
        Title="Gripper" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Canvas x:Name="canvas"/>
        <StackPanel>
            <Label Content="Q,A = move gripper left/right"/>
            <Label Content="W,S = open/close gripper"/>
            <Label Content="E,D = move gripper up/down"/>
        </StackPanel>     
    </Grid>    
</Window>
